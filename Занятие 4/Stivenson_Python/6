WIDTH = 80
def center(s, width):
    if width < len(s):
        return s
    spaces = (width - len(s)) // 2
    result = " " * spaces + s
    return result
def main():
    print(center("Известная история", WIDTH))
    print(center("от:", WIDTH))
    print(center("Кого–то известного", WIDTH)) 
    print()
    print("Жили–были...")
main()
