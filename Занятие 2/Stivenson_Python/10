P = 5
N = 0.05
t = 0.00
l = input("Введите цену товара (пустая строка для выхода): ")
while l != "":
    t = t + float(l)
    l = input("Введите цену товара (пустая строка для выхода): ")
print("Полная сумма к оплате: %.02f" % t)
r = t * 100 % P
if r < P / 2:
    c = t - r / 100
else:
    c = t + N - r / 100
print("Сумма для оплаты наличными: %.02f" % c)
