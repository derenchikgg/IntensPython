l = input("Введите 8 бит информации: ")
while l != "":
    if l.count("0") + l.count("1") != 8 or len(l) != 8:
        print("Это не 8 бит... Попробуйте еще.")
    else:
        o = l.count("1")
    if o % 2 == 0:
        print("Бит четности должен иметь значение 0.")
    else:
        print("Бит четности должен иметь значение 1.")
l = input("Введите 8 бит информации: ")
