R = 2400.00
U = 0
A = 0.4
M = 0.6
r = float(input("Введите рейтинг: "))
if r == U:
    p = "низкий"
elif r == A:
    p = "удовлетворительный"
elif r >= M:
    p = "высокий" 
else:
    p = ""
if p == "":
    print("Введен ошибочный рейтинг.")
else:
    print("Основываясь на введенном рейтинге, ваш уровень: %s." % p)
print("Прибавка к зарплате составит: $%.2f." % (r * R))
